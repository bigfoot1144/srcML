<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<unit xmlns="http://www.srcML.org/srcML/src" revision="1.0.0" language="C++" filename="modules/example1.cpp">

<!--module examples-->
<!--test 1-->
<unit language="C++">
<module>module <name>A</name>;</module>
</unit>

<!--test 2-->
<unit language="C++">
<module><specifier>export</specifier> module <name>B</name>;</module>
</unit>

<!--test 3-->
<unit language="C++">
<module><specifier>export</specifier> module <name><name>C</name><operator>:</operator><name>B</name></name>;</module><attribute>[[ <expr><name>noreturn</name></expr> ]]</attribute>;
</unit>

<!--export declaration-->
<!--test 4-->
<unit language="C++">
<export>export <function_decl><type><name>void</name></type> <name>test</name><parameter_list>()</parameter_list>;</function_decl></export>
</unit>

<!--3 export { declaration-seq(optional) }-->
<!--test 5-->
<unit language="C++">
<export>export <block>{}</block></export>
</unit>

<!--test 6-->
<unit language="C++">
<block><specifier>export</specifier>{ 
    <block_content><function><type><name>int</name></type> <name>a</name><parameter_list>()</parameter_list> <block>{<block_content/>}</block></function>
</block_content>}</block> 
</unit>

<!--4 export(optional) import module-name attr(optional) ;-->
<!--test 7-->
<unit language="C++">
<import>import <name>A</name>;</import>
</unit>

<!--test 8-->
<unit language="C++">
<import><specifier>export</specifier> import <name>A</name> ;</import>
</unit>

<!--test 9-->
<unit language="C++">
<import><specifier>export</specifier> import <name>A</name> <attribute>[[ <expr><name>noreturn</name></expr> ]]</attribute>;</import>
</unit>

<!--5 export(optional) import module-partition attr(optional) ;-->
<!--test 10-->
<unit language="C++">
<import>import <name><name>A</name><operator>:</operator><name>B</name></name>;</import>
</unit>

<!--test 11-->
<unit language="C++">
<import><specifier>export</specifier> import <name>A</name><operator>:</operator><name>B</name> <attribute>[[ <expr><name>noreturn</name></expr> ]]</attribute>;</import>
</unit>

<!--6 export(optional) import header-name attr(optional) ;-->
<!--test 12-->
<unit language="C++">
<import>import <header>&lt;iostream&gt;</header>;</import>
</unit>

<!--test 13-->
<unit language="C++">
<import><specifier>export</specifier>import <header>&lt;iostream&gt;</header> <attribute>[[ <expr><name>noreturn</name></expr> ]]</attribute>;</import>
</unit>

<!--7 module ;-->
<!--test 14-->
<unit language="C++">
<module>module ;</module>
</unit>

<!--8 module : private ;-->
<!--test 15-->
<unit language="C++">
<module>module <operator>:</operator> <specifier>private</specifier> ;</module>
</unit>

</unit>
